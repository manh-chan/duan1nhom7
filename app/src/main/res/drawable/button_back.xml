<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ -->
    <item>
        <shape>
            <solid android:color="#33000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Hình dạng chính -->
    <item android:bottom="5dp" android:right="5dp">
        <shape>
            <solid android:color="#F0ECEC"/>
            <corners android:radius="15dp"/>
            <stroke
                android:width="2dp"
                android:color="#121111"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>