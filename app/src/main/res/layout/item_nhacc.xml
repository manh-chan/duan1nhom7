<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/button_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_qlnhacungcap"
                android:layout_gravity="center"
                android:id="@+id/img_nhacc"
                android:layout_margin="3dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_ma_nhacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Ma Nha Cung Cap: "/>
                <TextView
                    android:id="@+id/tv_ten_nhacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Ten Nha Cung Cap"/>
                <TextView
                    android:id="@+id/tv_sdt_nhacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="So Dien Thoai:"/>
                <TextView
                    android:id="@+id/tv_diachi_nhacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Dia Chi:"/>
                <TextView
                    android:id="@+id/tv_trangthai_nhacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Trang thai:"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imgDeleteLS"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:src="@drawable/ic_xoa"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>